            <solid android:color="@color/bg_green"/>
            <corners android:radius="38dp"/>
        </shape>
    </item>
    
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/green"/>
            <corners android:radius="38dp"/>
        </shape>
    </item>
    
    <item >
        <shape android:shape="rectangle">
            <solid android:color="@color/green"/>
            <corners android:radius="38dp"/>
        </shape>
    </item>

</selector>